<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OperatorButton" parent="NumberButton">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="EqualsButton" parent="NumberButton">
        <item name="android:background">@drawable/equals_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ScientificButton" parent="NumberButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>